{
  "model": {
    "embed_dim": 256,
    "num_blocks": 4,
    "num_heads": 8,
    "dropout": 0.1,
    "max_length": 20
  },
  "data": {
    "bins": 64,
    "max_length": 20,
    "min_font_freq": 500,
    "num_workers": 4
  },
  "training": {
    "batch_size": 16,
    "num_epochs": 100,
    "learning_rate": 0.0001,
    "weight_decay": 0.01,
    "warmup_epochs": 5,
    "gradient_clip": 1.0,
    "accumulation_steps": 1
  },
  "scheduler": {
    "type": "ReduceLROnPlateau",
    "mode": "min",
    "factor": 0.5,
    "patience": 5,
    "min_lr": 1e-6
  },
  "loss_weights": {
    "type": 1.0,
    "left": 1.0,
    "top": 1.0,
    "width": 1.0,
    "height": 1.0,
    "opacity": 1.0,
    "color": 1.0,
    "font_family": 1.0,
    "image_embedding": 0.1,
    "text_embedding": 0.1
  },
  "checkpoint": {
    "save_interval": 5,
    "keep_last_n": 3,
    "save_best": true
  },
  "logging": {
    "log_interval": 100,
    "val_interval": 1
  }
}
